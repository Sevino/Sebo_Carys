@model Front_Office.ViewModels.ClientViewModel

@{
    ViewBag.Title = "CARYS - Connexion";
}

<div class="jumbotron">
    <h1>Connexion</h1>
    @if (Model.Connecte)
    {
        <p>Bienvenue @Model.Client.PrenomClient !</p>
    }
    else
    {
        using (Html.BeginForm("Connexion", "Client", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Client.EmailClient, new { @class = "col-sm-2 control-label" })
                @Html.TextBoxFor(model => model.Client.EmailClient, new { @class = "col-sm-10 form-control", placeholder = "Email", tabindex = 1, type = "email" })
                <label class="control-label erreur">@Html.ValidationMessageFor(model => model.Client.EmailClient)</label>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Client.MotDePasseClient, new { @class = "col-sm-2 control-label" })
                @Html.PasswordFor(model => model.Client.MotDePasseClient, new { @class = "col-sm-10 form-control", placeholder = "Mot de passe", tabindex = 2 })
                <label class="control-label erreur">@Html.ValidationMessageFor(model => model.Client.MotDePasseClient)</label>
            </div>
            <div class="row">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10 form-group double-input">
                    <input type="submit" value="Envoyer" class="btn btn-primary form-control" />
                    <input type="submit" value="Envoyer" class="btn btn-primary form-control" />
                </div>
                <label class="control-label erreur">@Html.ValidationMessageFor(model => model.Message)</label>
            </div>
        }
    }
</div>