@model Front_Office.ViewModels.HomeViewModel

@{
    ViewBag.Title = "CARYS - Connexion";
}

<div class="jumbotron">
    <h1>Connexion</h1>
    @using (Html.BeginForm("Connexion", "Client", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Client.EmailClient, new { @class = "col-sm-2 control-label" })
            @Html.TextBoxFor(model => model.Client.EmailClient, new { @class = "col-sm-10 form-control", placeholder = "Email", tabindex = 1, type = "email" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Client.MotDePasseClient, new { @class = "col-sm-2 control-label" })
            @Html.PasswordFor(model => model.Client.MotDePasseClient, new { @class = "col-sm-10 form-control", placeholder = "Mot de passe", tabindex = 2 })
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Connexion</label>
            <input type="submit" value="Envoyer" class="btn btn-primary col-sm-10 form-control" />
        </div>
    }
</div>