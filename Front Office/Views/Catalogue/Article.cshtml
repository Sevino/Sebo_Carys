@model Front_Office.ViewModels.HomeViewModel

@{
    ViewBag.Title = "CARYS - Article : " + Model.ArticleChoisi.LibelleArticle;
}

<div class="jumbotron">
    <h1>@Model.ArticleChoisi.LibelleArticle</h1>
    <div class="pull-right">
        <img src="@Model.ArticleChoisi.PhotoArticle" alt="@Model.ArticleChoisi.LibelleArticle" class="img-responsive" />
        @Html.ActionLink("Ajouter", "Ajouter", "Panier", new { id = Model.ArticleChoisi.Reference }, new { @class = "btn btn-primary pull-right ajouter" })
    </div>
    <ul>
        <li>Prix : @String.Format("{0:0.00}", Model.ArticleChoisi.Prix) €</li>
        <li>Genre : @Front_Office.Models.BddContext.ObtenirGenre(Model.ArticleChoisi.IdGenre).LibelleGenre</li>
        <li>Description : @Model.ArticleChoisi.DescriptionArticle</li>
    </ul>
</div>
